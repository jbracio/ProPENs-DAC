@inherits LayoutComponentBase

<!-- MODERNES HORIZONTALES MENÜ OBEN -->
<header style="position: fixed; top: 0; left: 0; width: 100%; height: 60px; background: linear-gradient(to right, #003C78, #005EA8); display: flex; align-items: center; padding: 0 40px; justify-content: space-between; box-shadow: 0 2px 5px rgba(0,0,0,0.2); z-index: 1000;">
    <div style="color: white; font-size: 18px; font-weight: bold; letter-spacing: 0.5px;">
        Direct Air Capture Site Evaluation in Germany
    </div>
    <nav style="display: flex; align-items: center; gap: 20px;">
        <span style="color: white; font-size: 14px;">Menu</span>
        <NavLink href="/" style="text-decoration: none; color: white; font-weight: 500; transition: color 0.3s;">Start</NavLink>
        <NavLink href="/ProPENs-DAC/statistiken" style="margin-left: 20px; color: white;">Statistiken</NavLink>
    </nav>
</header>

<!-- HAUPTBEREICH DER SEITE -->
<main style="margin-top: 70px; padding: 20px; font-family: 'Segoe UI', sans-serif; background-color: #f5f7fa; min-height: 100vh;">
    @Body
</main>

<!-- LOGO UNTEN RECHTS -->
<img src="img/tum-logo.png" alt="TUM Logo" style="position: fixed; bottom: 20px; right: 20px; height: 50px; z-index: 1000;" />